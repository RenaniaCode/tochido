<div class="body-padding">
  <div class="titles">
    <p>Editar Perfil</p>
  </div>

  <div class="body">

    <form
      class="row gy-2 gx-3 align-items-center"
      action="/league/edit-league/{{user._id}}"
      method="POST"
    >
      <div class="col-sm-5">
        <label for="exampleInputEmail1" class="form-label">Nombre</label>
        <input
          type="text"
          name="name"
          class="form-control"
          value="{{user.name}}"
        />
      </div>

      <div class="col-sm-5">
        <label for="exampleInputEmail1" class="form-label">Apellido</label>
        <input
          type="text"
          name="surname"
          class="form-control"
          value="{{user.surname}}"
        />
      </div>

      <div class="col-sm-5">
        <label for="exampleInputPassword1" class="form-label">Nombre de mi Liga</label>
        <input
          type="text"
          name="league_name"
          class="form-control"
          value="{{league.0.league_name}}"
        />
      </div>

      <div class="col-sm-5">
        <label for="basic-url" class="form-label">Logo de mi Liga</label>
        <div class="input-group mb-3">
          <span class="input-group-text" id="basic-addon3">URL</span>
          <input
            type="text"
            class="form-control"
            id="basic-url"
            aria-describedby="basic-addon3"
            name="league_logo"
            value="{{league.0.league_logo}}"
          />
        </div>
      </div>

      <div class="col-sm-5">
        <label for="country" class="form-label">País</label>
        <select
          class="form-select"
          aria-label="Default select example"
          name="country"
        >
          <option value="ALE">DEU &#x1f1e9;&#x1f1ea;</option>
          <option value="ITA">ITA &#x1f1ee;&#x1f1f9; </option>
          <option value="EEUU">USA &#x1f1fa;&#x1f1f8; </option>
          <option value="CAN">CAN &#x1f1e8;&#x1f1e6; </option>
        </select>
      </div>

      <div class="col-12">
        <button type="submit" class="btn btn-bd-third">Enviar</button>
      </div>
    </form>
  </div>
</div>

